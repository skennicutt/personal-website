{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
      "baseUrl": "./src",
      "jsx": "react",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es6", "es2016", "dom"],
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./public",
      "disableSizeLimit": true,
      "noUnusedLocals": true,
      "allowSyntheticDefaultImports": true
  }
}
